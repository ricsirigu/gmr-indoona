<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  version="2.5">
  <servlet>
    <servlet-name>indoona</servlet-name>
    <servlet-class>com.gmr.indoona.api.IndoonaServlet</servlet-class>
  </servlet>
    <servlet>
    <servlet-name>redirect</servlet-name>
    <servlet-class>com.gmr.indoona.api.Redirect</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>connect</servlet-name>
    <servlet-class>com.gmr.indoona.api.Connect</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>management</servlet-name>
    <servlet-class>com.gmr.indoona.api.Management</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>connect</servlet-name>
    <url-pattern>/indoona/connect</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>management</servlet-name>
    <url-pattern>/indoona/management</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>indoona</servlet-name>
    <url-pattern>/indoona/endpoint</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
    <servlet-name>redirect</servlet-name>
    <url-pattern>/indoona/redirect</url-pattern>
  </servlet-mapping>
   <listener>
        <listener-class>com.gmr.indoona.config.BootContextListener</listener-class>
    </listener>
</web-app>